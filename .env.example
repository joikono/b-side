# Environment Configuration Template
# Copy this file to .env and configure your settings

# OpenAI API Configuration (required for voice features)
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_NAME=MIDI Analysis API
APP_VERSION=2.1.0
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
RELOAD=true

# CORS Settings (configure for production)
CORS_ORIGINS=["*"]

# Analysis Settings
DEFAULT_SEGMENT_SIZE=2
DEFAULT_TOLERANCE_BEATS=0.15
DEFAULT_BPM=100

# OpenAI Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=100
OPENAI_TIMEOUT=30.0